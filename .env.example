# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=10000

# Database Configuration (Option 1: Connection URL - for Production/Render)
# DATABASE_URL=postgresql://username:password@host:port/database

# Database Configuration (Option 2: Individual Parameters - for Local Development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pollutiondb
DB_USER=pollutiondb_user
DB_PASSWORD=your_password_here

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=24h

# Auth & Security
BCRYPT_SALT_ROUNDS=12

# Email (SMTP)
EMAIL_USER=your_outlook_email@example.com
EMAIL_PASS=your_outlook_password_or_app_password
EXPOSE_OTP_CODES=false
ALLOW_OTP_FALLBACK=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Database Pooling
DB_POOL_MAX=5

# CORS Configuration (comma separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
